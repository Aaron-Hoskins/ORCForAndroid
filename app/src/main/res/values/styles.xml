<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RegularText">
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColor">@color/base_text_color</item>
    </style>

    <style name="StandardButton">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="StandardEditText" parent="RegularText">
        <item name="android:background">@drawable/standard_edit_text</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
